<div>
	<p> Title: <%= @question.title %> </p>	
	<p> Category: <%= @question.category %> </p>
	<p> <%= @question.question_details %> </p>
	<p> Posted by: <%= User.find(@question.user_id).full_name %> </p>
		<form method="post" action="/questions/<%= @question.id %>/answers">
		<input type=text placeholder="Answer" name="answer">
		<input type=submit value="Submit">
	</form>
	<% if @question.answers %>
		<% loop = 1 %>
		<% @question.answers.each do |ans| %>
			<div>
				<p> <%= loop %> </p>
				<p> <%= ans.answer_details %> </p>
				<p> <%= User.find(ans.user_id).full_name %> </p>
				<% loop += 1 %>
			</div>
		<% end %>
	<% end %>
</div>