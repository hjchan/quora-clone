<% if logged_in? %>
	<form method="post" action="/questions">
		<input type=text placeholder="Title" name="question[title]"><br>
		<input type=text placeholder="Category" name="question[category]"><br>
		<input type=text placeholder="Question" name="question[question_details]"><br>
		<input type=submit value="Submit">
	</form>
	<p><%= @question.errors.messages if @question %></p>
<% end %>

<% if @questions %>
	<% loop = 1 %>
	<% @questions.each do |q| %>
		<div>
			<p> <%= loop %> </p>
			<a href="/questions/<%= q.id %>" >Title: <%= q.title %> </a>
      <p> <%= q.question_details %> </p> 
			<p> Category: <%= q.category %> </p>
			<p> Posted by: <%= User.find(q.user_id).full_name %> </p>
			<% loop += 1 %>
		</div>
	<% end %>
<% end %>